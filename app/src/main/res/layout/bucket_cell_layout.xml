                android:layout_height="70dp">

    <ImageView
        android:id="@+id/thumbnail_image"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"/>

